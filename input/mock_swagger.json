{
  "openapi": "3.0.0",
  "info": {
    "title": "User API",
    "version": "1.0.0"
  },
  "paths": {
    "/users/register": {
      "post": {
        "summary": "Register new user",
        "description": "Creates a new user account.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserReg"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User Created" },
          "400": { "description": "Validation Error" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserReg": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "role": {
            "type": "string",
            "enum": ["Admin", "User", "Guest"]
          }
        },
        "required": ["username", "email"]
      }
    }
  }
}
